# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env.production when ready for production

# PRODUCTION MODE
NODE_ENV=production
PORT=3000

# PAYSTACK PRODUCTION CONFIGURATION
USE_PAYSTACK=true
USE_FLUTTERWAVE=false

# PAYSTACK LIVE CREDENTIALS (GET FROM https://dashboard.paystack.com/)
# Replace with your actual live keys after business verification
PAYSTACK_PUBLIC_KEY=pk_live_your-live-public-key-here
PAYSTACK_SECRET_KEY=sk_live_your-live-secret-key-here
PAYSTACK_CALLBACK_URL=https://your-production-domain.com/paystack/callback

# BACKUP: FLUTTERWAVE LIVE CREDENTIALS
FLW_PUBLIC_KEY=FLWPUBK-your-live-public-key-here
FLW_SECRET_KEY=FLWSECK-your-live-secret-key-here

# FALLBACK: SAFARICOM PRODUCTION (if needed)
MPESA_CONSUMER_KEY=your-production-consumer-key
MPESA_CONSUMER_SECRET=your-production-consumer-secret
MPESA_SHORTCODE=your-production-shortcode
MPESA_PASSKEY=your-production-passkey
MPESA_CALLBACK_URL=https://your-production-domain.com/mpesa/callback

# SECURITY
ALLOWED_ORIGINS=https://your-app-domain.com
WEBHOOK_SECRET=your-webhook-secret-key

# INSTRUCTIONS:
# 1. Get Paystack live keys from https://dashboard.paystack.com/
# 2. Replace the placeholder values above
# 3. Copy this file to .env.production
# 4. Deploy to your production server
# 5. Set NODE_ENV=production on your server
